{
  "name": "acton",
  "publisher": "acton",
  "displayName": "Acton",
  "description": "Acton language support",
  "license": "BSD-3-Clause",
  "icon": "images/logo-notext.png",
  "version": "0.4.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "activationEvents": [
    "onLanguage:acton",
    "onStartupFinished",
    "onDebugResolve:acton",
    "onDebugInitialConfigurations:acton",
    "onCommand:acton.buildActiveFile",
    "onCommand:acton.runActiveFile",
    "onCommand:acton.installOrUpdate",
    "onCommand:acton.useSystemBinary",
    "onCommand:acton.showBinaryInfo",
    "onCommand:acton.removeManagedBinary"
  ],
  "main": "./out/extension.js",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/actonlang/vscode-acton"
  },
  "contributes": {
    "commands": [
      {
        "command": "acton.buildActiveFile",
        "title": "Acton: Build Active File"
      },
      {
        "command": "acton.runActiveFile",
        "title": "Acton: Run Active File"
      },
      {
        "command": "acton.installOrUpdate",
        "title": "Acton: Install or Update (Managed)"
      },
      {
        "command": "acton.useSystemBinary",
        "title": "Acton: Use System Binary"
      },
      {
        "command": "acton.showBinaryInfo",
        "title": "Acton: Show Binary Info"
      },
      {
        "command": "acton.removeManagedBinary",
        "title": "Acton: Remove Managed Binary"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Acton Language Server",
      "properties": {
        "acton.tools.actonPath": {
          "type": "string",
          "default": "acton",
          "description": "Path to the Acton CLI executable used to build and run. Set an absolute path if your VS Code PATH does not include 'acton'."
        },
        "acton.manageInstallation": {
          "type": "boolean",
          "default": true,
          "description": "Allow the extension to download and manage a local Acton toolchain."
        },
        "acton.releaseChannel": {
          "type": "string",
          "enum": ["latest", "tip"],
          "default": "latest",
          "description": "Which release channel to install for managed Acton: 'latest' (stable) or 'tip' (prerelease)."
        },
        "acton.autoUpdate": {
          "type": "string",
          "enum": ["off", "ask", "auto"],
          "default": "ask",
          "description": "How to handle new Acton releases for managed installations."
        },
        "acton.lsp.serverPath": {
          "type": "string",
          "default": "lsp-server-acton",
          "description": "Path to the Acton language server executable"
        },
        "acton.lsp.debounce": {
          "type": "number",
          "default": 200,
          "minimum": 0,
          "description": "Debounce editor changes before parsing (milliseconds)"
        }
      }
    },
    "languages": [{
      "id": "acton",
      "aliases": ["Acton", "acton"],
      "extensions": [".act"],
      "configuration": "./language-configuration.json",
      "icon": {
        "light": "images/logo-notext.svg",
        "dark": "images/logo-notext.svg"
      }
    }],
    "grammars": [{
      "language": "acton",
      "scopeName": "source.acton",
      "path": "./syntaxes/acton.tmLanguage"
    }],
    "breakpoints": [
      {
        "language": "acton"
      }
    ],
    "debuggers": [
      {
        "type": "acton",
        "label": "Acton",
        "languages": ["acton"]
      }
    ],
    
    "menus": {
      "editor/title": [
        {
          "command": "acton.runActiveFile",
          "when": "resourceLangId == acton",
          "group": "navigation@1"
        },
        {
          "command": "acton.buildActiveFile",
          "when": "resourceLangId == acton",
          "group": "navigation@2"
        }
      ]
    }
    
  }
  ,
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "echo Preparing for publish"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.96.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.0.0"
  },
  "extensionDependencies": [
    "llvm-vs-code-extensions.lldb-dap"
  ]
}
