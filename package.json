{
  "name": "acton",
  "publisher": "acton",
  "displayName": "Acton",
  "description": "Acton language support",
  "license": "BSD-3-Clause",
  "icon": "images/logo-notext.png",
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.96.0"
  },
  "activationEvents": [
    "onLanguage:acton"
  ],
  "main": "./out/extension.js",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/actonlang/vscode-acton"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Acton Language Server",
      "properties": {
        "acton.lsp.serverPath": {
          "type": "string",
          "default": "lsp-server-acton",
          "description": "Path to the Acton language server executable"
        }
      }
    },
    "languages": [{
      "id": "acton",
      "aliases": ["Acton", "acton"],
      "extensions": [".act"],
      "configuration": "./language-configuration.json",
      "icon": {
        "light": "images/logo-notext.svg",
        "dark": "images/logo-notext.svg"
      }
    }],
    "grammars": [{
      "language": "acton",
      "scopeName": "source.acton",
      "path": "./syntaxes/acton.tmLanguage"
    }]
  }
  ,
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "echo Preparing for publish"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.96.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.0.0"
  }
}
